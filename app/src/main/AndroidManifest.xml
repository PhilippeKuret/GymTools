<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.philippe.gymtools">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".App.GymToolsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/title_activity_main">
        </activity>
        <activity android:name=".Activities.WorkoutTimerActivity">
        </activity>
        <activity android:name=".Activities.WorkoutPlanActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Activities.TrainingPlansActivity">
        </activity>
        <activity android:name=".Activities.PlanDetails">
        </activity>
    </application>

</manifest>